<h1>
<%= @post.title %>
</h1>
<p>
<%= @post.user.name %>
</p>
<p>
<%= image_tag @post.image, :width=>500, height:700 %>
</p>
<p>
<%= @post.description %>
</p>

<p>
Number of votes: <%= @post.get_votes %>
</p>
<%= link_to "like", "javascript:;", id: 'sendvote', post_id: @post.id %>

<%= link_to "Edit", edit_post_path(@post) %>
