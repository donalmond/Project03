<%= form_for @post do |f| %>

<%= f.label :title %>
<%= f.text_field :title, :required => true %>
<br>
<%= f.label :description%>
<%= f.text_field :description, :size=>"50", :maxlength=>"140" %>
<br>
<%= f.label :image %>
<%= f.file_field :image, :required => true %>

<%= f.submit "submit" %>

<% end %>
